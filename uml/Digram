@startuml ZomatoAppModules

package "User Module" {
  class User {
    +id
    +createdAt
    +updatedAt
    +lastLoggedIn
    +username
    +password
    +emailId
    +role
    +countryCode
    +mobileNo
    +isMobileNoVerified
    +authProvider
    +isEmailVerified
    +isPhoneNoVerified
    +isAccountNonLocked
    +isAccountNonExpired
    +isCredentialsNonExpired
    +UserProfile userProfile
  }

  class OTPVerification {
    +otpCode
    +expiresAt
    +verified
  }

  class UserProfile {
        +Long id
        +firstName
        +middleName
        +lastName
        +gender
        +user
        +Address addresses
  }

  class Address {
     +id
     +street
     +city
     +state
     +pinCode
     +country
     +addressType
     +userProfiles
  }

  class OrderHistory {
    +orderDate
    +totalCost
  }

  User --> OTPVerification
  User --> UserProfile
  User --> Address
  User --> OrderHistory
}

package "Order Module" {
  class CartItem {
    +quantity
  }

  class Checkout {
    +summary
    +paymentStatus
  }

  class Payment {
    +razorpayOrderId
    +status
  }

  class OrderTracking {
    +status
    +location
  }

  class Notification {
    +type
    +message
  }

  User --> CartItem
  CartItem --> Checkout
  Checkout --> Payment
  Checkout --> OrderTracking
  User --> Notification
}

package "Restaurant Module" {
  class Restaurant {
    +id
    +restaurantName
    +address
    +latitude
    +longitude
    +openingHours
    +closingHours
    +description
    +mealType
    +isVerified
    +menuItemList
  }

  class MenuItem {
   +id
   +menuName
   +cuisine
   +price
   +imageUrl
   +isAvailable
   +Description
   +ingredients
   +menuType
   +restaurant
  }

  class Review {
    +id;
    +rating;
    +comment;
    +restaurant;
  }
  class FoodCertificate{
     +id;
     +certificateUrl;
     +certificateType;
     +issuedDate;
     +expireDate;
  }

  Restaurant --> MenuItem
  User --> Review
  Review --> Restaurant
  FoodCertificate --> Restaurant
}

package "Delivery Module" {
  class DeliveryPartner {
    +id
    +name
    +status
  }

  class DeliveryDashboard {
    +assignedOrders
  }

  class RouteOptimization {
    +routeMap
  }

  class DeliveryStatus {
    +status
    +timestamp
  }

  DeliveryPartner --> DeliveryDashboard
  DeliveryDashboard --> RouteOptimization
  DeliveryDashboard --> DeliveryStatus
}

package "Admin Panel" {
  class UserManagement {
    +blockUser()
    +editProfile()
  }

  class RestaurantManagement {
    +verifyRestaurant()
    +editRestaurant()
  }

  class OrderManagement {
    +trackOrder()
    +updateStatus()
  }

  class AnalyticsDashboard {
    +orders
    +revenue
    +engagement
  }

  class Promotions {
    +discountCode
    +validity
  }

  class ContentModeration {
    +reviewFlag
    +actionTaken
  }

  Admin --> UserManagement
  Admin --> RestaurantManagement
  Admin --> OrderManagement
  Admin --> AnalyticsDashboard
  Admin --> Promotions
  Admin --> ContentModeration
}

@enduml
